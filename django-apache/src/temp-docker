# docker run -t -d python-web-centos
# or
# docker run -d python-centos sleep infinity

FROM centos/python-36-centos7

# default user was set to jboss in centOS 
USER root
RUN yum -y --enablerepo=extras install epel-release && \
	yum clean all && \
	yum -y update && \
	yum install -y \
	curl \
	vim \
	nano \
	openssl-devel \
	# apache 
	httpd


RUN pip install \
	pipenv \
	virtualenv

###
### COPY source file
###
WORKDIR /
RUN mkdir src
COPY . src/

WORKDIR /src
RUN pipenv update

#CMD [ "python" ]